<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10"
            android:background="#9e9e9e"
            app:cardCornerRadius="@dimen/margin5"
            app:cardElevation="@dimen/margin10"
            app:cardPreventCornerOverlap="true">

          <!--  <ImageView
                android:id="@+id/ivpassfail"
                android:layout_width="@dimen/margin100"
                android:layout_height="@dimen/margin50"
                android:layout_gravity="top|right"
                android:background="@drawable/passed"
                android:scaleType="fitXY" />
-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin5"
                        android:text="@string/title"
                        android:textColor="@color/green100"
                        android:textSize="@dimen/textsize16"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_category_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/margin5"
                            android:drawableLeft="@drawable/ic_type"
                            android:layout_marginLeft="@dimen/margin5"
                            android:text="@string/categoryid"
                            android:textSize="@dimen/textsize16"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/passingscore" />

                        <TextView
                            android:id="@+id/tv_passcore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin5"
                            android:text="@string/passingscore"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/margin5"
                    android:padding="@dimen/margin5"
                    android:text="title"
                    android:textColor="@color/black" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin5"
                    android:gravity="right"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin5"
                        android:padding="@dimen/margin5"
                        android:text="date"
                        android:textColor="@color/black" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <FrameLayout
        android:layout_width="1000dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin10">

        <!-- Put your menu items here. The first one will be shown at the horizontal start. -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/deepOrange800">

            <TextView
                android:id="@+id/button_delete"
                android:layout_width="@dimen/margin100"
                android:layout_height="match_parent"
                android:text="@string/delete"
                android:textSize="@dimen/textsize16"
                android:textColor="@android:color/white"
                android:gravity="center" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/deepgreen800">

            <TextView
                android:id="@+id/button_edit"
                android:layout_width="@dimen/margin100"
                android:layout_height="match_parent"
                android:text="@string/edit"
                android:textSize="@dimen/textsize16"
                android:textColor="@android:color/white"
                android:gravity="center" />
        </FrameLayout>
    </FrameLayout>

</LinearLayout>