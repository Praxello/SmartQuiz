<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin50"
        android:id="@+id/cardview_sub_topic"
        android:elevation="@dimen/margin5"
        app:cardCornerRadius="@dimen/margin10"
        app:cardElevation="@dimen/margin5"
        android:layout_margin="@dimen/margin5"
        app:cardPreventCornerOverlap="true">

        <View
            android:layout_width="@dimen/margin20"
            android:layout_height="@dimen/margin20"
            android:background="@drawable/ic_dot"
            android:id="@+id/ivbullet"
            android:layout_gravity="center|start"
            android:layout_margin="@dimen/margin10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sub_type"
            android:text="@string/general_quiz"
            android:padding="@dimen/margin10"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin20"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small" />

    </androidx.cardview.widget.CardView>


</LinearLayout>
