<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.praxello.smartmcq">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name="com.praxello.smartmcq.services.SmartQuiz"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.praxello.smartmcq.activity.LoginActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name="com.praxello.smartmcq.activity.AddNewQuestionActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name="com.praxello.smartmcq.activity.ViewQuestionActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name="com.praxello.smartmcq.activity.AddQuizActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name="com.praxello.smartmcq.activity.MyQuizActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name="com.praxello.smartmcq.activity.MyScoreActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name="com.praxello.smartmcq.activity.UpdateProfileActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name="com.praxello.smartmcq.activity.SignUpActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name="com.praxello.smartmcq.activity.ForgotPasswordActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name="com.praxello.smartmcq.activity.DashBoardActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name="com.praxello.smartmcq.activity.QuizSubTopicsActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name="com.praxello.smartmcq.activity.QuizTopicsActvity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <activity
            android:name="com.praxello.smartmcq.activity.WelcomeSliderActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <activity
            android:name="com.praxello.smartmcq.activity.MainActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.praxello.smartmcq.activity.quiz.QuizActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name="com.praxello.smartmcq.activity.PreViewActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustPan|stateHidden" />
    </application>

</manifest>